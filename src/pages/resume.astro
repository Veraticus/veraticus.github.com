<style>
  .resume {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .resume-header {
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .resume-header h1 {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: 800;
    margin-bottom: var(--space-sm);
    color: var(--black);
  }

  .contact-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-md);
  }

  .pill {
    display: inline-block;
    padding: 0.35rem 1rem;
    border-radius: var(--radius-full);
    border: 2px solid var(--black);
    background: var(--bg-surface);
    color: var(--black);
    font-size: var(--text-sm);
    transition: box-shadow 0.2s ease;
  }

  a.pill:hover {
    box-shadow: 4px 4px 0 var(--black);
  }

  .pill-download {
    background: var(--coral);
    color: white;
    border: 2px solid var(--black);
  }

  .pill-download:hover {
    box-shadow: 4px 4px 0 var(--black);
  }

  .skills-row {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    justify-content: center;
  }

  .skill-pill {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    background: var(--teal);
    color: white;
    font-size: var(--text-xs);
    font-weight: 500;
    border: 2px solid var(--black);
  }

  .section {
    margin-bottom: var(--space-xl);
  }

  .section h2 {
    color: var(--teal);
    font-size: var(--text-lg);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-xs);
    border-bottom: 3px solid var(--black);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    display: inline-block;
  }

  .section h2::after {
    content: "";
    position: absolute;
    right: -1.5rem;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 8px;
    height: 8px;
    background: var(--yellow);
    border: 2px solid var(--black);
  }

  .job {
    margin-bottom: var(--space-lg);
  }

  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .job-header h3 {
    font-size: var(--text-xl);
    color: var(--teal);
    margin-bottom: 0;
    position: relative;
    display: inline-block;
  }

  .job-header h3::before {
    content: "";
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: var(--coral);
    border-radius: 50%;
    border: 1.5px solid var(--black);
  }

  .location {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .job-meta {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .job-meta .title {
    font-weight: 700;
    color: var(--black);
    font-size: var(--text-sm);
  }

  .tenure {
    font-size: var(--text-sm);
    font-weight: 400;
    font-style: italic;
    color: var(--text-muted);
    font-family: var(--font-body);
  }

  .project-desc {
    color: var(--text-muted);
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  .job ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .job ul li {
    position: relative;
    padding-left: 1.25rem;
    color: var(--text-muted);
    font-size: var(--text-sm);
    line-height: 1.7;
    max-width: none;
  }

  .job ul li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.65em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--teal);
  }

  .pdf-link {
    text-align: center;
    margin-top: var(--space-xl);
  }

  .pdf-link a {
    color: var(--coral);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 0.15em;
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .pdf-link a:hover {
    color: var(--teal);
  }

  .pdf-link a::after {
    content: "";
    display: inline-block;
    width: 6px;
    height: 6px;
    background: var(--pink);
    border-radius: 50%;
    margin-left: 0.5rem;
    vertical-align: middle;
    border: 1.5px solid var(--black);
  }

  @media (max-width: 600px) {
    .resume {
      padding: 1.5rem 1rem;
    }

    .job-header, .job-meta {
      flex-direction: column;
      gap: 0.125rem;
    }

    .contact-row {
      flex-direction: column;
      align-items: center;
    }

    .pill {
      text-align: center;
    }
  }
</style>
