---
import Page from "../layouts/Page.astro";
import MemphisLogo from "../components/MemphisLogo.astro";
import MemphisShapes from "../components/MemphisShapes.astro";
import LinkCard from "../components/LinkCard.astro";
import LinkGrid from "../components/LinkGrid.astro";
import { links } from "../data/links";
---

<Page title="Josh Symonds">
  <section class="hero">
    <video
      class="hero-video"
      autoplay
      muted
      loop
      playsinline
      poster="/images/josh-header.webp"
    >
      <source src="/videos/josh-hero.webm" type="video/webm" />
      <source src="/videos/josh-hero.mp4" type="video/mp4" />
    </video>
    <MemphisShapes />
    <div class="hero-content">
      <MemphisLogo />
      <p class="tagline">Platform architect. Product builder. Relentlessly bold.</p>
      <p class="tagline-sub">
        Building infrastructure at scaleâ€”and AI storytelling games on the side.
      </p>
    </div>
    <a href="/workflows" class="video-credit">
      Video: WAN 2.2 + ComfyUI
    </a>
  </section>

  <section class="links-section">
    <LinkGrid>
      {links.map((link, i) => (
        <LinkCard {...link} colorIndex={i} />
      ))}
    </LinkGrid>
  </section>
</Page>

<style>
  .hero {
    min-height: 100vh;
    background-color: var(--bg, #fafaf7);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left center;
    z-index: 0;
  }

  /* Fallback for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-video {
      display: none;
    }

    .hero {
      background-image: url("/images/josh-header.webp");
      background-size: cover;
      background-position: left center;
      background-repeat: no-repeat;
    }
  }

  .hero-content {
    margin-left: 50%;
    max-width: 45vw;
    padding: 3rem 3rem 3rem 2rem;
    position: relative;
    z-index: 5;
  }

  .tagline {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    color: var(--text, #1a1a1a);
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .tagline-sub {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--text-muted, #555);
    margin: 0;
    line-height: 1.6;
    max-width: 520px;
  }

  /* --- Video credit --- */
  .video-credit {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    font-size: 0.7rem;
    color: rgba(26, 26, 26, 0.5);
    text-decoration: none;
    z-index: 10;
    transition: color 0.2s;
  }

  .video-credit:hover {
    color: var(--teal, #2ec4b6);
  }

  /* --- Links --- */
  .links-section {
    padding: 5rem 1.5rem 6rem;
    position: relative;
    z-index: 1;
    background: var(--bg, #fafaf7);
  }


  /* --- Responsive --- */
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      align-items: stretch;
      justify-content: flex-end;
    }

    .hero-video {
      object-position: 30% top;
    }

    .hero-content {
      margin-left: 0;
      max-width: 100%;
      padding: 2rem 1.5rem 3rem;
      background: rgba(255, 255, 255, 0.92);
    }
  }

  @media (max-width: 768px) and (prefers-reduced-motion: reduce) {
    .hero {
      background-position: 30% top;
    }
  }
</style>

<script>
  // Testing: ?hero=image (static only) or ?hero=video (video only)
  const params = new URLSearchParams(window.location.search);
  const heroMode = params.get('hero');
  const video = document.querySelector('.hero-video');
  const hero = document.querySelector('.hero');

  if (heroMode === 'image' && video) {
    video.style.display = 'none';
    hero.style.backgroundImage = 'url("/images/josh-header.webp")';
    hero.style.backgroundSize = 'cover';
    hero.style.backgroundPosition = 'left center';
  } else if (heroMode === 'video' && video) {
    hero.style.backgroundImage = 'none';
  }
</script>
