---
import Base from "./Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  readonly frontmatter: {
    readonly title: string;
    readonly date: string;
    readonly tags: readonly string[];
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Base title={`${frontmatter.title} | Josh Symonds`}>
  <Header />
  <main>
    <article class="prose">
      <header class="post-header">
        <h1>{frontmatter.title}</h1>
        <time datetime={frontmatter.date}>{formattedDate}</time>
        <div class="tags">
          {frontmatter.tags.map((tag) => (
            <span class="tag-pill">{tag}</span>
          ))}
        </div>
      </header>
      <slot />
    </article>
  </main>
  <Footer />
</Base>

<style>
  .prose {
    max-width: 72ch;
    margin-inline: auto;
    padding-inline: 1.5rem;
    padding-block: 2rem;
    line-height: 1.75;
    color: var(--black);
  }

  .post-header {
    margin-block-end: 2.5rem;
    padding-block-end: 1.5rem;
    border-block-end: 3px solid var(--black);
    position: relative;
  }

  .post-header::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 10px;
    height: 10px;
    background: var(--teal);
    border: 2px solid var(--black);
    border-radius: 50%;
  }

  .post-header h1 {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 800;
    line-height: 1.2;
    margin-block-end: 0.75rem;
    color: var(--black);
  }

  .post-header time {
    display: block;
    color: var(--teal);
    font-size: 0.95rem;
    font-weight: 700;
    margin-block-end: 0.75rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-pill {
    display: inline-block;
    padding: 0.2em 0.7em;
    border-radius: var(--radius-full);
    background: var(--bg-surface);
    color: var(--black);
    font-size: 0.8rem;
    font-weight: 500;
    border: 2px solid var(--black);
  }

  /* Prose content styles */
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-heading);
    margin-block-start: 2em;
    margin-block-end: 0.75em;
    line-height: 1.3;
    color: var(--black);
  }

  .prose :global(h2) {
    font-size: 1.75rem;
  }

  .prose :global(h3) {
    font-size: 1.4rem;
  }

  .prose :global(h4) {
    font-size: 1.15rem;
  }

  .prose :global(a) {
    color: var(--teal);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 0.15em;
  }

  .prose :global(a:hover) {
    color: var(--coral);
  }

  .prose :global(pre) {
    background: #f0f0ec;
    border: 2px solid var(--black);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    overflow-x: auto;
    margin-block: 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--black);
  }

  .prose :global(pre > code) {
    background: none;
    padding: 0;
    border: none;
    color: inherit;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .prose :global(:not(pre) > code) {
    background: #f0f0ec;
    padding: 0.15em 0.35em;
    border-radius: var(--radius-sm);
    border: 2px solid var(--black);
    color: var(--black);
  }

  .prose :global(blockquote) {
    border-inline-start: 4px solid var(--teal);
    padding-inline-start: 1.25rem;
    margin-inline: 0;
    margin-block: 1.5rem;
    background: #f0f0ec;
    padding: 1rem 1.25rem;
    color: var(--text-muted);
    font-style: italic;
    position: relative;
  }

  .prose :global(blockquote)::before {
    content: "";
    position: absolute;
    top: -4px;
    left: -4px;
    width: 8px;
    height: 8px;
    background: var(--coral);
    border: 2px solid var(--black);
    transform: rotate(45deg);
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border: 2px solid var(--black);
    margin-block: 1.5rem;
  }

  .prose :global(p) {
    margin-block: 1.25rem;
    max-width: none;
  }

  .prose :global(ul),
  .prose :global(ol) {
    padding-inline-start: 1.5rem;
    margin-block: 1.25rem;
  }

  .prose :global(li) {
    margin-block: 0.35rem;
  }

  .prose :global(hr) {
    border: none;
    height: 3px;
    background: var(--black);
    margin-block: 2rem;
    position: relative;
  }

  .prose :global(hr)::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    background: var(--yellow);
    border: 2px solid var(--black);
    border-radius: 50%;
  }
</style>
