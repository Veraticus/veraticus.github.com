<style>
  .memphis-shapes {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
    overflow: hidden;
  }

  .memphis-shape {
    position: absolute;
    pointer-events: none;
    animation: memphis-float var(--duration, 7s) ease-in-out infinite;
    animation-delay: var(--delay, 0s);
  }

  /* --- Teal circles --- */
  .circle {
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    background: #2ec4b6;
    border: 2.5px solid #1a1a1a;
  }

  /* --- Coral triangles --- */
  .triangle {
    width: 0;
    height: 0;
    border-left: calc(var(--size) / 2) solid transparent;
    border-right: calc(var(--size) / 2) solid transparent;
    border-bottom: var(--size) solid #ff6b6b;
    animation: memphis-float var(--duration, 7s) ease-in-out infinite,
               memphis-spin var(--duration, 7s) linear infinite;
    animation-delay: var(--delay, 0s);
  }

  /* --- Yellow diamonds --- */
  .diamond {
    width: var(--size);
    height: var(--size);
    background: #ffe600;
    border: 2.5px solid #1a1a1a;
    transform: rotate(45deg);
    animation: memphis-float var(--duration, 7s) ease-in-out infinite,
               memphis-wiggle var(--duration, 7s) ease-in-out infinite;
    animation-delay: var(--delay, 0s);
  }

  /* --- Black squiggles --- */
  .squiggle {
    opacity: 0.7;
    animation: memphis-float var(--duration, 7s) ease-in-out infinite,
               memphis-wiggle calc(var(--duration, 7s) * 0.8) ease-in-out infinite;
    animation-delay: var(--delay, 0s);
  }

  /* --- Dot clusters --- */
  .dots {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #1a1a1a;
    display: block;
  }

  /* --- Pink halftone rectangles --- */
  .halftone-rect {
    width: 40px;
    height: 24px;
    background: #ff6b6b;
    border: 2px solid #1a1a1a;
    opacity: 0.6;
    background-image: radial-gradient(circle, #1a1a1a 1px, transparent 1px);
    background-size: 5px 5px;
  }

  /* --- Animations --- */
  @keyframes memphis-float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-18px);
    }
  }

  @keyframes memphis-spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes memphis-wiggle {
    0%, 100% {
      transform: rotate(45deg) translateX(0);
    }
    25% {
      transform: rotate(50deg) translateX(4px);
    }
    75% {
      transform: rotate(40deg) translateX(-4px);
    }
  }

  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    .memphis-shape {
      animation: none;
    }
  }
</style>
